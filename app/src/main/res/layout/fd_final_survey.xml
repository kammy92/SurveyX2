<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_color_white">

        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:padding="@dimen/activity_margin"
            android:src="@drawable/ic_close"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivCancel"
            android:layout_alignTop="@+id/ivCancel"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Survey"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ivCancel"
            android:background="@color/text_color_grey_light2"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tvSubmit"
            android:layout_below="@+id/v1"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_margin">

                <LinearLayout
                    android:id="@+id/llAnswer9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_question"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_question2"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:text="@string/question9a"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"/>
                    <LinearLayout
                        android:id="@+id/tbCheckBoxes10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">
                            <RadioButton
                                android:id="@+id/rbNotAtAll"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Not at all"
                                android:textColor="@color/primary_text"/>
                            <RadioButton
                                android:id="@+id/rbVeryLittle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Very little"
                                android:textColor="@color/primary_text"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/rbALittle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="A little"
                                android:textColor="@color/primary_text"/>


                            <RadioButton
                                android:id="@+id/rbModerately"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Moderately"
                                android:textColor="@color/primary_text"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/rbALot"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="A lot"
                                android:textColor="@color/primary_text"/>

                            <RadioButton
                                android:id="@+id/rbQuiteALot"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Quite a lot"
                                android:textColor="@color/primary_text"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/rbExtremely"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Extremely"
                                android:textColor="@color/primary_text"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llAnswer9a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:background="@drawable/bg_question"
                    android:orientation="vertical"
                    android:weightSum="4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_question2"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:text="@string/question9b"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"/>
                    <EditText
                        android:id="@+id/etAnswer9a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llAnswer9b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:background="@drawable/bg_question"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_question2"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:text="@string/question9c"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"/>
                    <EditText
                        android:id="@+id/etAnswer9b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llAnswer9c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:background="@drawable/bg_question"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_question2"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:text="@string/question9d"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"/>
                    <EditText
                        android:id="@+id/etAnswer9c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llAnswer9d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:background="@drawable/bg_question"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_question2"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:text="@string/question9e"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"/>
                    <EditText
                        android:id="@+id/etAnswer9d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llAnswer9e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:background="@drawable/bg_question"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_question2"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:text="@string/question9f"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"/>
                    <EditText
                        android:id="@+id/etAnswer9e"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llAnswer9f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:background="@drawable/bg_question"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:background="@drawable/bg_question2"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:text="@string/question9g"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"/>
                    <EditText
                        android:id="@+id/etAnswer9f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_margin_small"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:padding="@dimen/activity_margin_small"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/primary_text"
            android:gravity="center"
            android:padding="@dimen/activity_margin"
            android:text="SUBMIT"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"/>


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>